<Window x:Class="解析几何.普通计算器"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="普通计算器" Height="300" Width="500" Loaded="Window_Loaded_1" WindowStartupLocation="CenterScreen">
    

    <Grid  Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="5" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!--区域1-->
            <ColumnDefinition Width="Auto"/>
            <!--调整区域-->
            <ColumnDefinition Width="1*"/>
            <!--区域2-->
        </Grid.ColumnDefinitions>
        
        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Center" Width="2" Background="#FF91B9E9" ShowsPreview="True">
        </GridSplitter>
        <TextBox x:Name="input" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" TextChanged="TextBox_TextChanged_1"/>
        <TextBox x:Name="t" Grid.Column="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
